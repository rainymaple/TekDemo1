<div style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">Products</div>
                <div style="padding: 10px;">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="product" class="col-sm-2 control-label">Product</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="product" name="product"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="amount" class="col-sm-2 control-label">Amount</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="amount" name="amount" value="1" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="price" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="price" name="price" value="12.34" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="isImported" class="col-sm-2 control-label">Imported</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="isImported" name="isImported">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button id="add" type="submit" class="btn btn-default">Add to Cart</button>
                                <button id="submit" type="submit" class="btn btn-success" style="margin-left: 20px;">Print Receipt</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="row center-block" style="margin-top: 20px; display: none;" id="divTable">
                <div class="col-xs-12 table-container">
                    <table id="tableCart" class="table table-striped table-bordered table-hover table-condensed">
                        <tbody>
                            <tr>
                                <th>Product Name</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Imported</th>
                                <th></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="divReceipt" class="col-md-5" style="display: none;">
        </div>
    </div>
</div>
<script src="~/Scripts/autoNumeric.js"></script>
<script src="~/Scripts/home.js"></script>